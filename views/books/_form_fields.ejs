<div>
    <label for="title">title</label>
    <input type="text" name="title" value="<%= book.name %>">
</div>
<div>
    <label for="author">Author</label>
    <select name="author">
        <% authors.map((author) => {%>
            <% if(author.id === book.author) {%>
                <option selected label='<%= author.name %>' value='<%= author.id %>'>
            <% } else { %>
                <option label='<%= author.name %>' value='<%= author.id %>'>
            <% } %>    
        <%})%>
    </select>
</div>
<div>
    <label for="">Publish Date</label>
    <input type="date" name='publish_date' value="<%= book.publish_date == null ? '' : book.publish_date.toISOString().split('T')[0]%>">
</div>
<div>
    <label for="">Page Count</label>
    <input type="number" name='page_count' min='1' value="<%= book.page_count%>">
</div>
<div>
    <label for="">Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>


